---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact" bgImage="/images/contact-bg.jpg">
  <div class="contact-container">
    <section class="contact-info">
      <h1 class="name">Nahun Saldaña</h1>
      
      <div class="details">
        <p class="label">Get in touch</p>
        <a href="mailto:nahunoise@gmail.com" class="email">nahunoise@gmail.com</a>
      </div>

      <div class="socials">
        <p class="label">Follow</p>
        <div class="links">
          <a href="https://www.instagram.com/nahun.saldana/" target="_blank">Instagram</a>
          <a href="https://nahunoise.bandcamp.com" target="_blank">Bandcamp</a>
          <a href="https://soundcloud.com/nahunsaldana" target="_blank">Soundcloud</a>
        </div>
      </div>
    </section>

    <footer class="contact-footer">
       <div class="footer-nav">
          <a href="/bio">Bio</a>
          <a href="/#projects">Projects</a>
          <a href="/contact">Contact</a>
       </div>
    </footer>
  </div>
</MainLayout>

<style>
  .contact-container {
    height: 85vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .name {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 8vw, 4rem);
    font-style: italic;
    font-weight: 400;
    margin-bottom: 4rem;
    letter-spacing: -0.02em;
  }

  .label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #a0ff00; /* Tu verde lima característico */
    margin-bottom: 1rem;
  }

  .details {
    margin-bottom: 3rem;
  }

  .email {
    font-size: 1.5rem;
    color: white;
    text-decoration: none;
    font-weight: 300;
    transition: opacity 0.3s;
  }

  .email:hover {
    opacity: 0.5;
  }

  .socials .links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .socials .links a {
    color: white;
    text-decoration: none;
    font-size: 0.9rem;
    opacity: 0.7;
    transition: opacity 0.3s;
  }

  .socials .links a:hover {
    opacity: 1;
  }

  .contact-footer {
    margin-top: auto;
    padding-bottom: 2rem;
  }

  .footer-nav {
    display: flex;
    gap: 3rem;
  }

  .footer-nav a {
    color: white;
    text-decoration: none;
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.5;
  }
</style>