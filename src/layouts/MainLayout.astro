---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
	bgImage?: string;
}

const { title, bgImage } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title} | Nahun Salda√±a</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400&family=Playfair+Display:ital@0;1&display=swap" rel="stylesheet">
	</head>
	<body style={bgImage ? `background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(${bgImage});` : ''}>
		<Navigation />
		<main class="container">
			<slot />
		</main>
	</body>
</html>

<style>
	body {
		background-color: #1a1a1a;
		color: #e0e0e0;
		margin: 0;
		font-family: 'Inter', sans-serif;
		background-size: cover;
		background-attachment: fixed;
		background-position: center;
		min-height: 100vh;
	}
	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 4rem 2rem;
	}
</style>